# OpenAI API Key for embeddings
OPENAI_API_KEY=sk-your-openai-api-key-here

# Database configuration
DB_PATH=./data/vectors.db

# Server configuration
PORT=3000
LOG_LEVEL=info

# Embedding configuration
# Model options: text-embedding-3-small, text-embedding-3-large, text-embedding-ada-002
EMBEDDING_MODEL=text-embedding-3-small

# Dimensions (depends on model):
# - text-embedding-3-small: 512-1536 (default: 1536)
# - text-embedding-3-large: 256-3072 (default: 3072)
# - text-embedding-ada-002: 1536 (fixed)
EMBEDDING_DIMENSIONS=1536

# Batch size for embedding generation (1-2048)
EMBEDDING_BATCH_SIZE=100

# Provider (currently only 'openai' is supported)
EMBEDDING_PROVIDER=openai

# Encoding format (float or base64)
EMBEDDING_ENCODING_FORMAT=float